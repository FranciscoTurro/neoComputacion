@model neoComputacion.ViewModel.PostVM

@{
    ViewData["Title"] = "Create Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="CreatePost" asp-asp-controller="Post" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="oPost.Id" />

    <div class="form-group mb-2">
        <label class="form-label" asp-for="oPost.Title">Title</label>
        <input type="text" class="form-control form-control-sm" asp-for="oPost.Title" required />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="PhotoPath">Foto</label>
        <input type="file" class="form-control" asp-for="PhotoPath" required />
    </div>

    <label class="form-label">Categories:</label>
    <div class="form-group mb-2">
        <div class="d-inline-flex flex-wrap">
            @foreach (var category in ViewBag.Categories)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="categories" value="@category.Id" id="@("category_" + category.Id)">
                    <label class="text-capitalize form-check-label" for="@("category_" + category.Id)">@category.Name</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="oPost.Content">Content</label>
        <textarea asp-for="oPost.Content" class="form-control" rows="20" required></textarea>
    </div>


    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Home</a>
    </div>
</form>