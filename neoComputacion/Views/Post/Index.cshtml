@model List<neoComputacion.Models.Post>

    <div>
        @foreach (var post in Model)
        {
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/@post.Image" alt="@post.Title image">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Content</p>
                    <a href="#" class="btn btn-warning">Update</a>
                    <a asp-controller="Post" asp-action="DeletePost" asp-route-id=@post.Id class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
        <a class="btn btn-primary" asp-action="CreatePost" asp-controller="Post">Create post</a>
    </div>